{
  "name": "alpha-clash-tcg",
  "version": "1.0.0",
  "description": "Alpha Clash Trading Card Game implementation for TCGArena",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "build:watch": "tsc --watch",
    "copy-assets": "cp -r cards images css index.html game.json dist/ 2>/dev/null || true",
    "dev": "npm run build && npm run serve",
    "serve": "npx serve dist -p 3000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "tcg",
    "trading-card-game",
    "alpha-clash",
    "tcgarena",
    "card-game"
  ],
  "author": "Alpha Clash TCG",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
